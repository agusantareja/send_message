<odoo>
    <record id="view_config_settings_form_wa" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.wa</field>
        <field name="model">res.config.settings</field>

        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='settings']//div[@id='emails']" position="after">
                <div id="send_message_email">
                    <h2>Email Test Forwarding</h2>
                    <div class="row mt16 o_settings_container">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="send_message_email_cron_batch_size" string="Email Batch Size"
                                               class="col-3 col-lg-3 o_light_label"/>
                                        <field name="send_message_email_cron_batch_size" class="oe_inline"
                                               required="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="send_message_email_test_forwarding" string="Test Email Forward"
                                               class="col-3 col-lg-3 o_light_label"/>
                                        <field name="send_message_email_test_forwarding" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
