<odoo>
    <record id="view_user_delegate_form" model="ir.ui.view">
        <field name="name">user.delegate.form</field>
        <field name="model">user.delegate</field>
        <field name="arch" type="xml">
            <form string="User Delegation">
                <header>
                    <field name="active" invisible="1"/>
                    <button name="action_button_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name . . ." readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="delegator_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="proxy_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="start_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="end_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_user_delegate_tree" model="ir.ui.view">
        <field name="name">user.delegate.tree</field>
        <field name="model">user.delegate</field>
        <field name="arch" type="xml">
            <tree string="Delegations">
                <field name="name"/>
                <field name="delegator_id"/>
                <field name="proxy_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_user_delegate" model="ir.actions.act_window">
        <field name="name">User Delegations</field>
        <field name="res_model">user.delegate</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
